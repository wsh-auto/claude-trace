{
	"compilerOptions": {
		// Shared base configuration
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,

		// Core package specific settings
		"target": "ES2020",
		"module": "CommonJS",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"types": ["node"],
		"preserveWatchOutput": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "test", "frontend"]
}
